[sub_resource type="Shader" id="Shader_3j7c1"]
code = "shader_type canvas_item;

// On récupère la position globale via un \"varying\"
varying vec2 world_pos;

void vertex() {
    // Calcule la position dans le monde (global_position)
    world_pos = (MODEL_MATRIX * vec4(VERTEX, 0.0, 1.0)).xy;
}

void fragment() {
    vec4 tex_color = texture(TEXTURE, UV);
    
    // Si la position Y globale est supérieure à 0
    if (world_pos.y > 0.0) {
        // On multiplie la couleur par du noir, tout en gardant l'alpha original
        COLOR = vec4(0.0, 0.0, 0.0, tex_color.a);
    } else {
        COLOR = tex_color;
    }
}"

